<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>

            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>

                <h3>Responda</h3>
                <form action="/responder" method="POST">

                    <input type="hidden" name="idpergunta" value="<%=pergunta.id%>">

                    <textarea class="form-control" placeholder="digite sua resposta" name="corpo" id="" cols="30"
                        rows="3"></textarea>

                    <button class="btn btn-success mt-3" type="submit">Responder</button>
                </form>

                <hr>
                <h3>Respostas</h3>

                <% respostas.forEach(resps=> { %>

                    <div class="card mt-3">
                        <div class="card-body">
                            <p>
                                <%= resps.corpo%>
                            </p>

                        </div>
                    </div>

                    <% }); %>

            </div>

            <br><br>


    </body>
    <%- include('partials/footer.ejs') %>
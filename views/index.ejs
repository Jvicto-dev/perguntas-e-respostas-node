<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>

            <div class="container">
                <hr>
                <h1>Perguntas</h1>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <hr>
                <br>
                <% perguntas.forEach(pergunta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">

                            <h2>
                                <%= pergunta.titulo%>
                            </h2>

                        </div>

                        <div class="card-footer">
                            <p><%= pergunta.descricao%></p>
                            <a href="/pergunta/<%= pergunta.id %> " class="btn btn-primary">Responder</a>
                        </div>

                    </div>



                    <% }); %>
            </div>

            <br><br>

    </body>
    <%- include('partials/footer.ejs') %>